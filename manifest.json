{
  "manifest_version": 3,
  "name": "BetterAis",
  "version": "1.1",
  "description": "Enhance your STU IS (is.stuba.sk) experience: ðŸŒ™ Toggle dark/light themes instantly, ðŸŽ¨ customize colors from predefined palettes, ðŸ’¾ save your preferences automatically, and âš¡ access all options quickly via the popup.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://is.stuba.sk/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://is.stuba.sk/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "style.css"
      ],
      "run_at": "document_end"
    }
  ]
}
